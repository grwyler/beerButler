<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/brew_frag_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="group10.tcss450.uw.edu.challengeapp.BrewTour.BrewTourHolderFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv1"
        card_view:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        card_view:cardCornerRadius="14dp">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beer_pic"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beer_name"
                android:layout_toRightOf="@+id/beer_pic"
                android:layout_toEndOf="@id/beer_pic"
                android:layout_alignParentTop="true"
                android:textSize="17sp"
                android:text="Name: Quilter's Irish Death"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brewery"
                android:layout_toRightOf="@+id/beer_pic"
                android:layout_toEndOf="@id/beer_pic"
                android:layout_below="@id/beer_name"
                android:textSize="17sp"
                android:text="Brewery: Iron Horse Brewery"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/abv"
                android:layout_toRightOf="@+id/beer_pic"
                android:layout_toEndOf="@id/beer_pic"
                android:layout_below="@id/brewery"
                android:textSize="15sp"
                android:text="ABV: 9.1         "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ibu"
                android:layout_toRightOf="@+id/abv"
                android:layout_toEndOf="@id/abv"
                android:layout_below="@id/brewery"
                android:textSize="15sp"
                android:text="IBUs: 45"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
