<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:elevation="10dp"
    card_view:cardCornerRadius="15dp"
    android:layout_margin="8dp"
    android:id="@+id/cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/brew_list_cv">

        <ImageView
            tools:ignore="contentDescription"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/brew_pic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="5dp" />
        <TextView
            android:id="@+id/name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/brew_pic"
            android:layout_toRightOf="@+id/brew_pic"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/style_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_view"
            android:layout_toEndOf="@+id/brew_pic"
            android:layout_toRightOf="@+id/brew_pic"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/is_organic_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/style_view"
            android:layout_toEndOf="@+id/brew_pic"
            android:layout_toRightOf="@+id/brew_pic" />
        <TextView
            android:id="@+id/brewery_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/is_organic_view"
            android:layout_toEndOf="@+id/brew_pic"
            android:layout_toRightOf="@+id/brew_pic" />
        <TextView
            android:id="@+id/abv_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brewery_view"
            android:layout_toEndOf="@+id/brew_pic"
            android:layout_toRightOf="@+id/brew_pic" />
        <TextView
            android:id="@+id/ibu_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/abv_view"
            android:layout_toEndOf="@+id/brew_pic"
            android:layout_toRightOf="@+id/brew_pic"/>
        <TextView
            android:id="@+id/description_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ibu_view"
            android:layout_toEndOf="@+id/brew_pic"
            android:layout_toRightOf="@+id/brew_pic"/>
        <TextView
            android:id="@+id/notes_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_view"
            android:layout_toEndOf="@+id/brew_pic"
            android:layout_toRightOf="@+id/brew_pic"/>
        <TextView
            android:id="@+id/rating_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notes_view"
            android:layout_toEndOf="@+id/brew_pic"
            android:layout_toRightOf="@+id/brew_pic"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>